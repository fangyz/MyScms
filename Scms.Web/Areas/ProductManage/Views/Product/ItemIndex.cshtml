@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <link href="~/reference/bootstrap-3.4.1/css/bootstrap.css" rel="stylesheet" />
    <script src="~/reference/jquery/jquery-3.6.0.min.js"></script>
    <script src="~/reference/bootstrap-3.4.1/js/bootstrap.js"></script>
    <script src="~/reference/vue/vue.global.js"></script>
</head>
<body>

    <div class="container" style="margin:10px 10px 10px 10px;padding:10px 10px 10px 10px">
        <form class="form-inline" role="form">
            <div style="display:inline;margin-right:20px;">
                <span>料号</span>
                <input type="text" class="form-control" placeholder="" id="id_input_itemcode">
            </div>

            <div style="display: inline; margin-right: 20px;">
                <span>名称</span>
                <input type="text" class="form-control" placeholder="" id="id_input_itemname">
            </div>

            <div style="display: inline; margin-right: 20px;">
                <span>创建人</span>
                <input type="text" class="form-control" placeholder="" id="id_input_creatuser">
            </div>

            <div class="input-group" style="margin-left:10px;">
                <button type="button" class="btn btn-primary" id="id_button_search" style="margin-right:15px;">查询</button>
                <button type="button" class="btn btn-primary" id="id_button_add" data-toggle="modal" data-target="#id_modal_additem">新增</button>
            </div>
        </form>
    </div>



    <div class="container table-responsive" style="margin-top:20px">
        <table class="table table-hover table-bordered">
            <thead>
                <tr class="info" style="visibility: hidden" id="id_thead_bomList">
                    <th>料号</th>
                    <th>名称</th>
                    <th>规格</th>
                    <th>图号</th>
                    <th>品牌</th>
                    <th>物料类型</th>
                    <th>创建人</th>
                    <th>创建日期</th>
                    <th>更新人</th>
                    <th>更新日期</th>
                </tr>
            </thead>
            <tbody id="id_tbody_bomList">
                <tr v-for="site in itemList" :site="site">
                    <td>{{site.ItemCode}}</td>
                    <td>{{site.ItemName}}</td>
                    <td>{{site.Specifications}}</td>
                    <td>{{site.PictureNo}}</td>
                    <td>{{site.Brand}}</td>
                    <td>
                        <label v-if="site.ItemType==1">零件料号</label>
                        <label v-else-if="site.ItemType==2">模块料号</label>
                        <label v-else-if="site.ItemType==3">成品料号</label>
                    </td>
                    <td>{{site.CreateUser}}</td>
                    <td>{{site.CreateTime.substring(0,10)}}</td>
                    <td>{{site.UpdateUser}}</td>
                    <td>{{site.UpdateTime.substring(0,10)}}</td>
                </tr>
            </tbody>
        </table>
    </div>



    <!-- 模态框，新增物料 -->
    <div class="modal fade" id="id_modal_additem" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal"
                            aria-hidden="true">
                        ×
                    </button>
                    <h4 class="modal-title" id="myModalLabel">
                        新增料号
                    </h4>
                </div>

                <form method="post" >
                    <div class="modal-body">
                        <div class="form-group form-inline">
                            <label>编码</label>
                            <input class="form-control" style="margin-left:5px" id="id_form_itemcode" />
                            <label style="margin-left:30px">名称</label>
                            <input class="form-control" style="margin-left:5px" id="id_form_itemname" />
                        </div>

                        <div class="form-group form-inline">
                            <label>规格</label>
                            <input class="form-control" style="margin-left:5px" id="id_form_specifications" />
                            <label style="margin-left:30px">品牌</label>
                            <input class="form-control" style="margin-left:5px" id="id_form_brand" />
                        </div>

                        <div class="form-group form-inline">
                            <label>图号</label>
                            <input class="form-control" style="margin-left:5px" id="id_form_pictureno" />
                            <label style="margin-left:30px">类型</label>
                            <select name="ItemType" id="id_form_itemtype" class="form-control" style="margin-left:5px">
                                <option value=1>零件料号</option>
                                <option value=2>模块料号</option>
                                <option value=3>成品料号</option>
                            </select>
                        </div>
                        @Html.AntiForgeryToken()

                        <div class="modal-footer">
                            <div class="form-group">
                                <button class="btn btn-primary" onclick="AddItem()">提交</button>
                            </div>
                        </div>

                    </div>
                </form>

            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </div><!-- /.modal -->



</body>

</html>


<script type="text/javascript">

    const vueapp = {
        data() {
            return {
                itemList: []
            }
        },
        
    }


    const vm = Vue.createApp(vueapp).mount("#id_tbody_bomList")

    $("#id_button_search").click(function () {
        var itemCode = $("#id_input_itemcode").val();
        var itemName = $("#id_input_itemname").val();
        var createUser= $("#id_input_creatuser").val();
        SearchBomByCode(itemCode, itemName, createUser);
    });

    function SearchBomByCode(itemCode, itemName, createUser) {
        debugger
        $.ajax({
            type: "GET",
            url: "/ProductManage/Product/SearchItem",
            data: { "ItemCode": itemCode, "ItemName": itemName, "CreateUser":createUser},
            dataType: "JSON",
            success: function (resObj) {
                debugger
                if (resObj.IsSuccess) {
                    $("#id_thead_bomList").css("visibility", "visible");
                    vm.itemList = resObj.ResultObj;
                } else {
                    alert(resObj.Message);
                }

            }
        });
    }

    function AddItem() {
        var itemCode = $("#id_form_itemcode").val();
        var itemName = $("#id_form_itemname").val();
        var specifications = $("#id_form_specifications").val();
        var brand = $("#id_form_brand").val();
        var pictureNo = $("#id_form_pictureno").val();
        var itemType = $("#id_form_itemtype").val();
        var xsfr = $('input[name="__RequestVerificationToken"]').val();
        debugger
        $.ajax({
            type: "POST",
            url: "/ProductManage/Product/AddItem",
            data: { "__RequestVerificationToken": xsfr,"ItemCode": itemCode, "ItemName": itemName, "Specifications": specifications, "Brand": brand, "PictureNo": pictureNo, "ItemType": itemType},
            dataType: "JSON",
            success: function (resObj) {
                debugger
                if (resObj.IsSuccess) {
                    $("#id_thead_bomList").css("visibility", "visible");
                    vm.itemList = resObj.ResultObj;
                } else {
                    alert(resObj.Message);
                }

            }
        });
    }

</script>